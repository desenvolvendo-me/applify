<%= simple_form_for([:manager, profile], html: { class: 'contents' }) do |f| %>
  <%= f.error_notification %>

  <div class="my-5">
    <%= f.input :email, input_html: { value: profile.user.email, class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full', readonly: true } %>
  </div>

  <div class="my-5">
    <%= f.input :name, input_html: { class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' } %>
  </div>

  <div class="my-5">
    <%= f.input :user_type, collection: Profile.user_types.keys.map { |type| [type.capitalize, type] }, include_blank: false, input_html: { class: 'block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full' } %>
  </div>

  <div class="inline">
    <%= f.submit class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
  </div>

<% end %>