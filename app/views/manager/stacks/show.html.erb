<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @stack %>

    <%= link_to 'Edit this manager_stack', edit_manager_stack_path(@manager_stack), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this manager_stack', manager_stack_path(@manager_stack), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to manager_stacks', manager_stacks_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
