<div>
  <%= simple_form_for [:manager, @candidature] do |f| %>
    <div class="flex flex-col my-4">
      <div class="flex">
        <%= f.input :company_id, collection: Company.all, label_method: :name, value_method: :id, prompt: "Selecione uma empresa" %>
        <%= f.input :frame_work,as: :select, collection: Candidature.frame_works.keys, selected:'Ruby on Rails' %>
        <%= f.input :programming_language,as: :select, collection: Candidature.programming_languages.keys, selected:'Ruby' %>
      </div>

      <div class="flex">
        <%= f.input :job_position, collection: Candidature.job_positions.keys.map { |key| [t("enum.job_positions.#{key}"), key] }, selected:'junior_developer' %>
        <%= f.input :situation, as: :select, collection: Candidature.situations.keys.map{ |key| [t("enum.situations.#{key}"), key] }, selected:'send' %>
      </div>

      <div class="flex">
        <%= f.input :personal_projects %>
        <%= f.input :application_date %>
      </div>

      <div>
        <%= f.input :job_description, as: :text %>
        <%= f.input :presentation_letter, as: :text %>
        <%= f.input :knowledge_about_company, as: :text %>
      </div>

    <div class="flex">
      <%= f.button :submit, class: "cursor-pointer" %>
    </div>
    </div>
  <% end %>
</div>