<div>
  <%= simple_form_for [:manager, @candidature] do |f| %>
    <div class="flex flex-col">
      <div class="flex">
        <%= f.input :company_name %>
        <%= f.input :situation, as: :select, collection: Candidature.situations.keys.map{ |key| [t("enum.situations.#{key}"), key] }, selected:'send' %>
      </div>
        <div>
          <%= f.input :job_position, collection: Candidature.job_positions.keys.map { |key| [t("simple_form.options.candidature.job_position.#{key}"), key] }, prompt: :translate %>
        </div>
        <div>
          <%= f.input :job_description, as: :text %>
        </div>
        <div>
          <%= f.input :contract_type, collection: Candidature.contract_types.keys, prompt: :translate %>
        </div>
        <div>
          <%= f.input :salary, as: :decimal %>
        </div>
        <div>
          <%= f.input :benefits %>
        </div>
        <div>
          <%= f.input :contact_name %>
        </div>
        <div>
          <%= f.input :contact_phone_number %>
        </div>
        <div>
          <%= f.input :contact_email %>
        </div>

    <div class="flex">
      <%= f.button :submit, class: "cursor-pointer" %>
    </div>
    </div>
  <% end %>
</div>
