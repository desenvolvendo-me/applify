<%= simple_form_for [:manager, @candidature] do |f| %>
  <div class="flex flex-col">
    <div class="flex">
      <%= f.input :company_name %>
      <%= f.input :situation, as: :select, collection: Candidature.situations.keys.map{ |key| [t("enum.situations.#{key}"), key] }, selected:'send' %>
    </div>
    <div class="flex">
      <%= f.button :submit, class: "cursor-pointer" %>
    </div>
</div>
<% end %>

