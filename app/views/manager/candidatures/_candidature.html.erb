<tr class="border-b dark:border-gray-700" id="<%= dom_id candidature %>">
  <td class="px-4 py-3">
    <input type="checkbox" id="<%= convert_to_id(candidature) %>-checkbox" data-goals--index-target="checkbox" value="<%= candidature.id %>">
  </td>
  <td class="px-4 py-3"> <%= candidature.company_name %></td>
  <td class="px-4 py-3"> <%= candidature.frame_work %></td>
  <td class="px-4 py-3"> <%= candidature.programming_language %></td>
  <td class="px-4 py-3"> <%= I18n.t("enum.situations.#{candidature.situation}") %></td>
  <td class="px-4 py-3 flex items-center justify-end">
    <button id="<%= convert_to_id(candidature) %>-dropdown-button" data-dropdown-toggle="<%= convert_to_id(candidature) %>-dropdown" class="inline-flex items-center p-0.5 text-sm font-medium text-center text-gray-500 hover:text-gray-800 rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100" type="button">
      <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z"/>
      </svg>
    </button>
    <div id="<%= convert_to_id(candidature) %>-dropdown" class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
      <% if action_name != "show" %>
        <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="apple-imac-27-dropdown-button">
          <li>
            <%= link_to t('views.manager.candidatures.show'), manager_candidature_path(candidature), class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
          </li>
          <li>
            <%= link_to t('views.manager.candidatures.edit'), edit_manager_candidature_path(candidature), class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" %>
          </li>
        </ul>
        <div class="py-1">
          <%= link_to t('views.manager.candidatures.delete') , manager_candidature_path(@candidature),
                      data: { turbo_method: :delete, turbo_confirm: t('views.manager.candidatures.delete_confirm') }, class: "mr-2 items-center justify-center text-white bg-blue-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800" %>
        </div>
      <% end %>
    </div>
  </td>
</tr>