<div class="mx-auto md:w-2/3 w-full">

  <div>
    <div class="py-4">
      <%= link_to t('views.manager.candidatures.index.add_candidature'), new_manager_candidature_path,
                  class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>

    </div>
    <h1 class="font-bold text-4xl mt-4"><%= t('views.manager.candidatures.index.title') %></h1>
  </div>

  <div id="candidatures" class="max-w-md text-gray-900 divide-y divide-gray-200 dark:text-white dark:divide-gray-700 mt-4">
    <% @candidatures.each do |candidature| %>
      <div class="flex flex-col pb-3">
        <%= link_to candidature.company_name, manager_candidature_path(candidature),
                    class: "font-bold text-xl hover:text-blue-600 transition-colors duration-200 ease-in" %>

      </div>
    <% end %>
  </div>
</div>
