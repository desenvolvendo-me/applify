<div id="accordion-collapse" data-accordion="collapse" class="md:w-1/4">
  <h2 id="accordion-collapse-heading-1">
    <button type="button" class="flex items-center justify-start w-full p-5 font-medium rtl:text-right text-gray-500 border border-b-0 border-gray-200 rounded-t-xl focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-800 dark:border-gray-700 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 gap-3" data-accordion-target="#accordion-collapse-body-1" aria-expanded="true" aria-controls="accordion-collapse-body-1">
      <span><%= t '.Important to know SPD!' %></span>
    </button>
  </h2>
    <div class="p-5 border border-b-0 border-gray-200 dark:border-gray-700 dark:bg-gray-900">
      <% @accords.each do |accord_load| %>
      <p class="mb-2 text-gray-500 dark:text-gray-400"> <%= accord_load.accord.gsub("\n", '<br>').html_safe %> </p>
      <% end %>
      <div>
        <input type="checkbox" id="agreed" name="agreed">
        <label for="agreed"><%= t '.Agreed' %></label>
      </div>
    </div>
</div>
