<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @company %>

    <%= link_to I18n.t('views.manager.company.edit'), edit_manager_company_path(@company), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to I18n.t('views.manager.company.delete'), manager_company_path(@company), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to I18n.t('views.manager.company.back'), manager_companies_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
