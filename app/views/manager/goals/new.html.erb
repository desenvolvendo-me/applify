<%= form_with(model: @goal, url: manager_goals_path, class: 'relative') do |form| %>
  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl"><%= t('views.manager.goals.index.add_goal') %></h1>
    <div>
      <%= form.submit t('views.manager.goals.save'), class: "mr-2 items-center justify-center text-white bg-blue-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800" %>
    </div>
  </div>

  <%= render "form", goal: @goal, form: form %>
<% end %>