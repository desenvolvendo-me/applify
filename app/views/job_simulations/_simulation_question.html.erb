<%= form.object.description %>
<br>
<% if form.object.answer_type == "answer_check" %>
  <%= form.input :answer_check, as: :select, collection: [['Sim', true], ['Não', false]], prompt: 'Escolha uma opção' %>
<% elsif form.object.answer_type == "answer_text" %>
  <%= form.input :answer_text, as: :text %>
<% elsif form.object.answer_type == "answer_link" %>
  <%= form.input :answer_link, as: :string %>
<% elsif form.object.answer_type == "answer_file" %>
  <%= form.file_field :answer_file %>
<% end %>